<?xml version="1.0" encoding="UTF-8"?>
<!--   只有下边框 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/frame" />
            
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    
 
</layer-list>