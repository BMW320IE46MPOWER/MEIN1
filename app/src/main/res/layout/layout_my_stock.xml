<?xml version="1.0" encoding="utf-8"?>
<!-- 1．	自选股 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical" >
    <include layout="@layout/common_title" />
    <RelativeLayout
        android:id="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="@dimen/z_title_height"
        android:background="@color/title"
        android:visibility="gone"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@android:color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="自选股"
            android:textColor="@color/White"
            android:textSize="@dimen/z_title_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/title_search"
                android:layout_width="@dimen/z_icon_size"
                android:layout_height="match_parent"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:text="" />

            <ImageView
                android:id="@+id/title_market"
                android:layout_width="@dimen/z_icon_size"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:src="@drawable/quotes" />
            <TextView
                android:id="@+id/bianji"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:text="完成"
                android:background="@drawable/bg_style"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_center"
    android:layout_width="match_parent"
    android:gravity="center"
    android:visibility="visible"
    android:layout_height="40dp">
    <RelativeLayout
        android:id="@+id/search_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@drawable/self_head">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D9D9D"
            android:layout_toRightOf="@+id/iv_search"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="请输入股票代码" />
    </RelativeLayout>
</RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:visibility="gone"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_index_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/z_colorblock"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_index_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_index_1_zs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_index_1_zdf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_index_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/z_colorblock"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_index_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_index_2_zs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_index_2_zdf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_index_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/z_colorblock"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_index_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_index_3_zs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_index_3_zdf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/White"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:background="#F1F1F1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/zs_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称"
            android:textColor="#040505"
            android:textSize="@dimen/z_list_title_size" />

        <TextView
            android:id="@+id/zs_11"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新价"
            android:textColor="#040505"
            android:textSize="@dimen/z_list_title_size" />

        <TextView
            android:id="@+id/zs_12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="涨跌"
            android:visibility="gone"
            android:textColor="#040505"
            android:textSize="@dimen/z_list_title_size" />

        <TextView
            android:id="@+id/zs_13"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="涨跌幅"
            android:textColor="#040505"
            android:textSize="@dimen/z_list_title_size" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADADB"
            />
        <com.mytv365.zb.widget.stock.XSlideListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:divider="#C7C7C7"
            android:cacheColorHint="#00000000"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_centers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#F0F0F0">

        <ImageView
            android:id="@+id/iv_searchs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/addphoto"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_below="@+id/iv_searchs"
            android:id="@+id/tv_searchs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无股票，点击添加"
            android:textColor="#5b5b5b"
            android:textSize="16sp"
            />
    </RelativeLayout>
</LinearLayout>