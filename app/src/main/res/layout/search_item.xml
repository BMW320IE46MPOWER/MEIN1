<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="最近搜索"
        android:textColor="@color/z_list_title"
        android:textSize="16dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/searchcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="股票代码"
                android:textColor="@color/z_list_title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/searchName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dip"
                android:gravity="center"
                android:text="股票名称"
                android:textColor="@color/z_list_title"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/addbuttonid"
            android:layout_width="@dimen/z_icon_size"
            android:layout_height="@dimen/z_icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search_add" >
        </Button>

        <Button
            android:id="@+id/cleebuttonid"
            android:layout_width="@dimen/z_icon_size"
            android:layout_height="@dimen/z_icon_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search_minus"
            android:visibility="gone" >
        </Button>
    </RelativeLayout>

</LinearLayout>