<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/quantouming"
    android:id="@+id/reality">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_bg"
        android:scaleType="centerCrop"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/Relat_zb_l"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/error_zb"
                android:layout_centerVertical="true"
                android:id="@+id/image_cha"
               />
        </RelativeLayout>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/xianjin_shape"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/Relate_top">


            <com.mytv365.zb.widget.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_members"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/head_icon"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/head_icon"
                android:text="Amand"
                android:textColor="@color/write"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/host_name"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/write"
                android:textSize="12sp"
                android:layout_toRightOf="@id/head_icon"
                android:layout_below="@id/host_name"
                android:text="123456"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:id="@+id/member_counts"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/write"
                android:textSize="11sp"
                android:layout_toRightOf="@id/member_counts"
                android:layout_below="@id/host_name"
                android:text="人"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"/>



            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/host_name"/>



            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/guanzhu"
                android:layout_toRightOf="@id/host_name"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:id="@+id/relat_guanzhu"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+关注"
                    android:textColor="@color/write"/>

            </RelativeLayout>



            <LinearLayout
                android:id="@+id/record_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/record_ball"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/liveshow_item_dot"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/broadcasting_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="00:00"
                    android:textColor="@color/colorTextWhite" />

            </LinearLayout>









        </RelativeLayout>




    </FrameLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播已结束"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textColor="@color/write"
        android:textSize="20sp"/>



</RelativeLayout>