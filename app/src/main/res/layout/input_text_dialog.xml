<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl_inputdlg_view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black_text"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <!-- 输入框 -->
        <EditText
            android:id="@+id/input_message"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/skin_aio_input_bg"
            android:contentDescription="文本框  连按两次来编辑"
            android:inputType="textMultiLine|text"
            android:maxLength="100"
            android:maxLines="6"
            android:minHeight="35dp"
            android:shadowColor="@color/chat_input_shadow_color"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textCursorDrawable="@color/yan_lan"
            android:textSelectHandle="@drawable/text_select_handle_middle"
            android:textSize="15sp" />
        <!-- 留言按钮 -->

        <TextView
            android:id="@+id/confrim_btn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/send_btn"
            android:text="发送 "
            android:gravity="center"
            android:textColor="@color/yan_withe"
            android:textSize="15sp" />
    </LinearLayout>

